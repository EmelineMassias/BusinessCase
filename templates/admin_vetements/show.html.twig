{% extends 'base.html.twig' %}

{% block title %}Vetements
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Vetements</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ vetement.id }}</td>
				</tr>
				<tr>
					<th>Libelle</th>
					<td>{{ vetement.libelle }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ vetement.description }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ vetement.prix }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td><img src="{{ asset('uploads/imagesVetement/' ~ vetement.image) }}"></td>
				</tr>
				<tr>
					<th>Prestation</th>
					<td>{{ vetement.prestation ? vetement.prestation|join(', ') : ''}}</td>
				</tr>
			</tbody>
		</table>

		<a id="btn" class="mt-3 btn btn-lg btn-block" href="{{ path('app_admin_vetements_index') }}">Retour au listing</a>

	</div>
{% endblock %}
