{% extends 'base.html.twig' %}

{% block title %}Gestion des commandes
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href=" {{ asset('libs/datatables/css/datatables.css') }} ">
	<link rel="stylesheet" href=" {{ asset('libs/datatables/css/datatables-bootstrap5.min.css') }} ">
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Gestion des commandes</h1>

		<table id="category_list" class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Detail</th>
					<th>Prix Total €</th>
					<th>Client</th>
					<th>Statut</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for commande in commandes %}
					<tr>
						<td>{{ commande.id }}</td>
						<td>
							{% for vetement in commande.getVetementsId() %}
								<br>{{ vetement.libelle }}
							{% endfor %}
						</td>
						<td>{{ commande.total }}</td>
						<td>
							{% for user in commande.getUserId() %}
								{{ user.prenom}}
								{{ user.nom }}
							{% endfor %}
						</td>
						<td>{{ commande.statut ? commande.statut|join(', ') : ''}}</td>
						<td>
							<a href="{{ path('app_admin_commandes_show', {'id': commande.id}) }}">voir</a><br>
							<a href="{{ path('app_admin_commandes_edit', {'id': commande.id}) }}">modifier</a>
							{{ include('admin_commandes/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucune commande trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a id="btn" class="mt-3 btn btn-lg btn-block" href="{{ path('app_admin_commandes_new') }}">Ajouter une commande</a>


		{% block javascripts %}

			<script rel="scripts" src="{{ asset('libs/datatables/jquery/jquery.js') }}"></script>
			<script rel="scripts" src="{{ asset('libs/datatables/jquery/jquery-datatables.js') }}"></script>
			<script rel="scripts" src="{{ asset('libs/datatables/jquery/datatables-bootstrap5.min.js') }}"></script>
			<script rel="scripts" src="{{ asset('js/category/init-dt.js') }}"></script>
		{% endblock %}
	</div>
{% endblock %}
