{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a class="btn btn-lg btn-block" href="{{ path('app_logout') }}" style="background-color: #AE9A88; color: #F1EFE7;">Déconnexion</a>
			</div>
		{% endif %}

		<section style="background-color: #F1EFE7;">
			<div class="container py-5 h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col col-xl-10">
						<div class="card" style="border-radius: 1rem; box-shadow: 10px 10px 10px 10px #AE9A88">
							<div class="row g-0">
								<div class="col-md-6 col-lg-5 d-none d-md-block">
									<img src="{{ asset('/images/img-login.jpg') }}" style="height:100%; border-radius: 1rem 0rem 0rem 1rem;" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"/>
								</div>
								<div class="col-md-6 col-lg-7 d-flex align-items-center" style="background-color: #F1EFE7;">
									<div class="card-body p-4 p-lg-5 text-black">

										<form>

											<div class="d-flex align-items-center mb-3 pb-1">
												<span class="h1 fw-bold mb-0"><img src="{{ asset('/images/logo200-svg.png') }}"></span>
											</div>

											<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Se connecter</h5>

											<div class="form-outline mb-4">
												<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-lg"/>
												<label class="form-label" for="inputEmail" autocomplete="email" required autofocus>Adresse e-mail</label>
											</div>

											<div class="form-outline mb-4">
												<input type="password" name="password" id="inputPassword" class="form-control form-control-lg"/>
												<label class="form-label" for="inputPassword" autocomplete="current-password" required>Mot de passe</label>
											</div>

											<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

											<div class="pt-1 mb-4">
												<button class="btn btn-lg btn-block" type="submit" style="background-color: #AE9A88; color: #F1EFE7;">Connexion</button>
											</div>

											<a class="small text-muted" href="#!">Mot de passe oublié ?</a>
											<p class="mb-5 pb-lg-2" style="color: #AE9A88;">Je n'ai pas de compte
												<a href="{{ path('app_register') }}" style="color: #6A5A4C;">S'inscrire</a>
											</p>
											<a href="#!" class="small text-muted">Terms of use.</a>
											<a href="#!" class="small text-muted">Privacy policy</a>
										</form>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</form>
{% endblock %}
